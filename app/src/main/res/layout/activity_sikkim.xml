<?xml version="1.0" encoding="utf-8"?>
<ScrollView  android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_200"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Sikkim" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/goa_card"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageslider1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="20"
                app:iss_delay="3000">

            </com.denzcoskun.imageslider.ImageSlider>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="261dp"
            android:layout_marginEnd="0dp">

            <TextView
                android:id="@+id/MaharashtraInfo"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:text="Sikkim"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="normal"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="59dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="337dp"
                android:text="Info"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/MaharashtraInfo" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/textView3"
                android:layout_width="344dp"
                android:layout_height="144dp"
                android:layout_marginStart="5dp"
                android:paddingStart="2dp"
                android:text="A part of the Eastern Himalaya, Sikkim is notable for its biodiversity, including alpine and subtropical climates, as well as being a host to Kangchenjunga, the highest peak in India and third highest on Earth. Sikkim's capital and largest city is Gangtok."
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.032"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.12" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Gateway_Card"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageViewGateWayOfIndia"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sk1"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/MP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="43dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="27dp"
                            android:text="Nathula"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewGateWayOfIndia"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/gateway_btn"
                            android:layout_width="182dp"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/black"
                            android:text="Get Location"
                            android:textColor="#EAE3E3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewGateWayOfIndia"
                            app:layout_constraintTop_toBottomOf="@+id/MP"
                            app:rippleColor="#F6F0F0"
                            tools:ignore="TouchTargetSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Gateway_Card1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageViewGateway"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sk2"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/DF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"
                            android:text="Tsomgo Cho"
                            android:textAlignment="viewStart"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/location_btn1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewGateway"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/location_btn1"
                            android:layout_width="182dp"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/black"
                            android:text="Get Location"
                            android:textColor="#EAE3E3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewGateway"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rippleColor="#F6F0F0"
                            tools:ignore="TouchTargetSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Gateway_Card2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageviewSiddhiVinayak"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sk3"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/CB"
                            android:layout_width="195dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="18dp"
                            android:text="Kandchendzonga National Park"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/location_btn2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageviewSiddhiVinayak"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.32999998" />

                        <Button
                            android:id="@+id/location_btn2"
                            android:layout_width="182dp"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/black"
                            android:text="Get Location"
                            android:textColor="#EAE3E3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageviewSiddhiVinayak"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rippleColor="#F6F0F0"
                            tools:ignore="TouchTargetSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Gateway_Card3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageViewSGNP"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sk4"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/SB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gurudongmar Lake"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/location_btn3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewSGNP"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/location_btn3"
                            android:layout_width="182dp"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/black"
                            android:text="Get Location"
                            android:textColor="#EAE3E3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewSGNP"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rippleColor="#F6F0F0"
                            tools:ignore="TouchTargetSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Gateway_Card4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageViewPagoda1"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sk5"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/Church"
                            android:layout_width="215dp"
                            android:layout_height="51dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="15dp"
                            android:text="Rumtek Dharma Chakra Centre"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/location_btn4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewPagoda1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/location_btn4"
                            android:layout_width="182dp"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/black"
                            android:text="Get Location"
                            android:textColor="#EAE3E3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewPagoda1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rippleColor="#F6F0F0"
                            tools:ignore="TouchTargetSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</ScrollView>